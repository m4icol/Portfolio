---

import { getI18N } from "../i18n";

const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });

const navItems = [
    {
        title: i18n.NAVIGATION.HOME,
        label: "Home-navigation",
        url: "/#home",
    },
    {
        title: i18n.NAVIGATION.PROJECTS,
        label: "Projects-navigation",
        url: "/#projects",
    },
    {
        title: i18n.NAVIGATION.ABOUT,
        label: "About-me-navigation",
        url: "/#about-me",
    },
    {
        title: i18n.NAVIGATION.CONTACT,
        label: "contact",
        url: "mailto:m4icol.r12@gmail.com",
    },
];

---

<ul
    {...Astro.props}
    class="
        flex flex-col items-center gap-10 
        font-medium text-sm text-CS-Light-Font dark:text-CS-Dark-Font 
        "
>
    {
        navItems.map((item) => (
            <a aria-label={item.label} href={item.url}>
                {item.title}
            </a>
        ))
    }
</ul>
