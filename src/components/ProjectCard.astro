---
import Github from "./icons/Github.astro"
import Preview from "./icons/Preview.astro"
import LinkPill from "./LinkPill.astro"
import { Image } from "astro:assets";

import { getI18N } from "../i18n";

const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });

const cardItems = [
    {
        image: "/mockupNewFocus.webp",
        title: i18n.PROJECTS.NEWFOCUS_TITLE,
        description: i18n.PROJECTS.NEWFOCUS_DESCRIPTION,
        urlWeb: "https://newfocus.netlify.app/",
        urlGitHub: "https://github.com/m4icol/Website_NewFocus",
    },
    {
        image: "/mockupNewFocus.webp",
        title: i18n.PROJECTS.NEWFOCUS_TITLE,
        description: i18n.PROJECTS.NEWFOCUS_DESCRIPTION,
        urlWeb: "https://newfocus.netlify.app/",
        urlGitHub: "https://github.com/m4icol/Website_NewFocus",
    }
]
---

    {
        cardItems.map((item) => (
        <div class="border-2 border-CS-Dark-Border w-3/4 md:w-80 rounded-xl overflow-hidden">

            <Image
                class="w-full"
                src={item.image}
                alt="Project preview"
                width="72"
                height="72"
            />

            <div class="flex flex-col gap-5 py-6 px-6">
                <h3 class="font-semibold text-2xl">{item.title}</h3>
                <p class="text-sm">{item.description}</p>

                <div class="flex flex-row gap-3">
                    <LinkPill href={item.urlWeb}>
                        <Preview />
                        {i18n.PROJECTS.PREVIEW_TEXT}
                    </LinkPill>

                    <LinkPill href={item.urlGitHub}>
                        <Github></Github>
                        GitHub
                    </LinkPill>
                </div>
            </div>
        </div>
        ))
    }
