---
import CodeIcon from "../components/icons/CodeIcon.astro"
import { Image } from "astro:assets";

import { getI18N } from "../i18n";

const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });
---

<section id="about-me" class="h-full w-screen flex flex-col gap-16 dark:text-CS-Dark-Font text-CS-Light-Font">

    <div class="flex flex-col gap-3 items-center justify-center">
        <h2 class="font-semibold text-4xl">{i18n.ABOUT.TITLE}</h2>
        <CodeIcon></CodeIcon>
    </div>

    <div class="flex flex-col-reverse md:flex-row justify-center items-center gap-20 md:gap-12">
        
        <Image
            class="rounded-2xl overflow-hidden"
            src="/profilePicture.webp"
            alt="Maickol Rivera"
            width="200"
            height="200"
        />

        <div class="w-64 md:w-1/3 text-sm flex flex-col gap-5">

            <p>{i18n.ABOUT.TEXT_1}</p>
            <p>{i18n.ABOUT.TEXT_2}</p>
            <p>{i18n.ABOUT.TEXT_3}</p>

        </div>

    </div>
</section>