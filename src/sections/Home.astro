---
import { Image } from "astro:assets";
import Sphere from "../components/Shape3D.astro";
---

<section id="home" class="w-screen h-screen relative flex items-center justify-center">
    <Sphere class="bg-CS-Dark-Background h-full w-screen absolute inset-0 -z-10 shadow-lg shadow-neutral-950" />

    <div class="flex flex-col items-center text-center gap-8 md:gap-6 pb-36 md:pb-10">

        <Image
            class="rounded-full"
            src="/profilePicture.webp"
            alt="Maickol Rivera"
            width="72"
            height="72"
        />

        <div class="flex flex-col items-center gap-3 md:gap-2">

            <h1 class="text-2xl w-64 leading-7 font-bold text-CS-Dark-Font">
                Welcome, I'm Maickol Rivera
            </h1>
            <p class="text-sm w-64 leading-5 font-normal md:text-sm text-CS-Dark-Font">
                Web Developer and UI/UX Designer. It's time to build something
                unique!
            </p>

        </div>

        <div class="scroll-indicator">
            <span class="arrow cursor-pointer"></span>
        </div>
    </div>
</section>

<style>
    .scroll-indicator {
        position: absolute;
        top: 612px;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
    }

    .arrow {
        display: block;
        width: 20px;
        height: 20px;
        border-radius: 10%;
        border-bottom: 4px solid;
        border-right: 4px solid;
        transform: rotate(45deg);
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0) rotate(45deg);
        }
        40% {
            transform: translateY(10px) rotate(45deg);
        }
        60% {
            transform: translateY(5px) rotate(45deg);
        }
    }
</style>
